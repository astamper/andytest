<%- model_class = Crm -%>
<div class="page-header">
  <h1><%=t '.title', :default => Crm %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:crm_first_name) %></th>
      <th><%= model_class.human_attribute_name(:crm_last_name) %></th>
      <th><%= model_class.human_attribute_name(:crm_phone_number) %></th>
      <th><%= model_class.human_attribute_name(:crm_email) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @crms.each do |crm| %>
      <tr>
        <td><%= crm.id %></td>
        <td><%= crm.crm_first_name %></td>
        <td><%= crm.crm_last_name %></td>
        <td><%= crm.crm_phone_number %></td>
        <td><%= crm.crm_email %></td>
        <td><%=l crm.created_at, format: :long %></td>
        <td>
          <%= link_to crm_path(crm), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to crm_path(crm), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_crm_path,
            :class => 'btn btn-primary' %>
