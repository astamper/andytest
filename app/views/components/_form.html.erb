<%= simple_form_for(@component) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :component_name %>
    <%= f.input :component_amount %>
    <%= f.input :component_unit %>
    <%= f.association :product %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
