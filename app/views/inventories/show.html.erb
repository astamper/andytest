<%- model_class = Inventory -%>
<div class="page-header">
  <h1><%=t '.title', :default => Inventory %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inventory_name) %></dt>
      <dd><pre class="prettyprint"><%= @inventory.inventory_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inventory_starting_amount) %></dt>
      <dd><pre class="prettyprint"><%= @inventory.inventory_starting_amount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inventory_current_amount) %></dt>
      <dd><pre class="prettyprint"><%= @inventory.inventory_current_amount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:inventory_unit) %></dt>
      <dd><pre class="prettyprint"><%= @inventory.inventory_unit %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:expiration) %></dt>
      <dd><pre class="prettyprint"><%= @inventory.expiration %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:lead_time_days) %></dt>
      <dd><pre class="prettyprint"><%= @inventory.lead_time_days %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              inventories_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inventory_path(@inventory), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inventory_path(@inventory),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

