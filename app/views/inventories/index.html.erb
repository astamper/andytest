<%- model_class = Inventory -%>
<div class="page-header">
  <h1><%=t '.title', :default => Inventory %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:inventory_name) %></th>
      <th><%= model_class.human_attribute_name(:inventory_starting_amount) %></th>
      <th><%= model_class.human_attribute_name(:inventory_current_amount) %></th>
      <th><%= model_class.human_attribute_name(:inventory_unit) %></th>
      <th><%= model_class.human_attribute_name(:expiration) %></th>
      <th><%= model_class.human_attribute_name(:lead_time_days) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.id %></td>
        <td><%= inventory.inventory_name %></td>
        <td><%= inventory.inventory_starting_amount %></td>
        <td><%= inventory.inventory_current_amount %></td>
        <td><%= inventory.inventory_unit %></td>
        <td><%= inventory.expiration %></td>
        <td><%= inventory.lead_time_days %></td>
        <td><%=l inventory.created_at, format: :long %></td>
        <td>
          <%= link_to inventory_path(inventory), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to inventory_path(inventory), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_inventory_path,
            :class => 'btn btn-primary' %>
